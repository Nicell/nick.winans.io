---
import { Picture } from "astro:assets";
import probe from 'probe-image-size';

interface Props {
  src: string;
  width?: string;
  formats?: string[];
  alt?: string;
}

const { src, width, formats, alt } = Astro.props;
const imageProbe = await probe(src);
const aspectRatio = imageProbe.width/imageProbe.height;
const w = Math.min(width || imageProbe.width, 706);
const h = w/aspectRatio;
---

<Picture src={src} class="loading-shimmer" formats={formats || ['avif', 'webp', 'png']} alt={alt || ''}  width={w} height={h} style={`width: ${w}px; aspect-ratio: ${imageProbe.width}/${imageProbe.height}`} widths={[w*2, w*1.5, w, w*.75, w*.5].filter(w => w <= imageProbe.width)} sizes={`(max-width ${w}px) 100%, ${w}px`} />
