---
import Header from "../components/Header.astro";
import Theme from "../components/Theme.astro";
export interface Props {
	title: string;
	description: string;
	og?: string;
	blog?: boolean;
}

const { title, description, og, blog } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
	<meta name="description" content={description} />
	{og && (
		<meta name="twitter:image:src" content={og} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@winansnick" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={og} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="nick.winans.io" />
		<meta property="og:type" content={blog ? 'article' : 'website'} />
	)}
	<style>
		@font-face {
			font-family: "Geologica";
			src: url("/fonts/Geologica.woff2") format("woff2");
			font-display: fallback;
			unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
				U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193,
				U+2212, U+2215, U+FEFF, U+FFFD;
    }
		@font-face {
			font-family: "Lexend Deca";
			src: url("/fonts/LexendDeca.woff2") format("woff2");
			font-display: fallback;
			unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
				U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193,
				U+2212, U+2215, U+FEFF, U+FFFD;
    }
		@font-face {
			font-family: "Geologica Fallback";
			size-adjust: 108%;
			ascent-override: 93%;
			src: local("Arial");
		}
		@font-face {
			font-family: "Lexend Deca Fallback";
			size-adjust: 95%;
			ascent-override: 102%;
			src: local("Arial Black");
		}
	</style>
</head>
<body>
	<Header blog={blog}/>
	<slot />
</body>
</html>
