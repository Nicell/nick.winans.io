---
const { title = "Nick Winans", description, og } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon-dark.ico" media="(prefers-color-scheme: dark)" />
    <link
      rel="icon"
      type="image/png"
      href="/favicon-dark-96x96.png"
      sizes="96x96"
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="icon"
      href="/favicon-dark.svg"
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="preload"
      href="/JetBrainsMono.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Nick Winans"
      href={new URL("rss.xml", Astro.site)}
    />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {og && (
      <meta name="twitter:image:src" content={og} />
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:site" content="@winansnick" />
      <meta name="twitter:title" content={title} />
      <meta name="twitter:description" content={description} />
      <meta property="og:title" content={title} />
      <meta property="og:description" content={description} />
      <meta property="og:image" content={og} />
      <meta property="og:image:width" content="1200" />
      <meta property="og:image:height" content="630" />
      <meta property="og:site_name" content="nick.winans.io" />
    )}
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "JetBrains Mono";
    font-style: normal;
    font-weight: 100 800;
    font-display: fallback;
    src:
      local("JetBrains Mono"),
      local("JetBrainsMono"),
      local("JetBrains-Mono"),
      url(/JetBrainsMono.woff2) format("woff2");
    unicode-range: U+0000-00A0, U+00A9, U+00AE, U+00B0, U+02BB-02BC, U+02C6,
      U+02DA, U+02DC, U+2000-206F, U+2122, U+2191, U+2193, U+2212, U+2215,
      U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Courier New Fallback";
    src: local("Courier New");
    size-adjust: 100%;
    ascent-override: 102%;
    descent-override: normal;
    line-gap-override: normal;
  }

  :root {
    --dark: oklch(30% 0.01 10);
    --light: oklch(98% 0.015 90);
    --link-dark: oklch(45% 0.15 250);
    --link-light: oklch(80% 0.1 250);
    --code-dark: oklch(23% 0.01 10);
    --code-light: oklch(100% 0.01 90);
  }

  body {
    font-family: "JetBrains Mono", "Courier New Fallback", monospace;
    line-height: 1.35;
    margin: 0;
    padding: 2em 1em;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  main {
    max-width: 64ch;
    width: 100%;
  }

  html {
    background-color: var(--light);
    color: var(--dark);
  }

  a {
    color: var(--link-dark);
  }

  @media (prefers-color-scheme: dark) {
    html {
      background-color: var(--dark);
      color: var(--light);
    }

    a {
      color: var(--link-light);
    }

    time {
      opacity: 0.8;
      font-size: 0.8rem;
    }
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5em;
  }

  p > code {
    background-color: var(--code-light);
    padding: 0.25em;
    border-radius: 0.25em;
  }

  .astro-code {
    padding: 0.5em;
    border-radius: 0.5em;
    background-color: var(--code-light) !important;
  }

  @media (prefers-color-scheme: dark) {
    p > code {
      background-color: var(--code-dark);
    }

    .astro-code,
    .astro-code span {
      color: var(--shiki-dark) !important;
      background-color: var(--code-dark) !important;
      font-style: var(--shiki-dark-font-style) !important;
      font-weight: var(--shiki-dark-font-weight) !important;
      text-decoration: var(--shiki-dark-text-decoration) !important;
    }
  }
</style>
